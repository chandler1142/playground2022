<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisentity.mapper.UserMapper">

    <select id="selectOneUser" parameterType="String" resultType="com.example.mybatisentity.entity.User">
        select * from users where username=#{username} limit 1
    </select>

</mapper>